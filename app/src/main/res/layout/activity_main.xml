<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.board.game.MainActivity" >

    <ImageView
        android:id="@+id/singlebutton"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginLeft="190dip"
        android:layout_marginTop="0dip"
        android:src="@drawable/singleplayer"
        android:onClick="onClick"/>

    <ImageView

        android:id="@+id/multibutton"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginLeft="190dip"
        android:layout_marginTop="50dip"
        android:onClick="onClick"
        android:src="@drawable/twoplayer" />

    <ImageView
        android:id="@+id/howtoplaybutton"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginLeft="190dip"
        android:layout_marginTop="100dip"
        android:src="@drawable/howtoplay"
        android:onClick="onClick"/>

    <ImageView
        android:id="@+id/highscorebuton"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginLeft="190dip"
        android:layout_marginTop="150dip"
        android:src="@drawable/highscores"
        android:onClick="onClick" />

</RelativeLayout>
